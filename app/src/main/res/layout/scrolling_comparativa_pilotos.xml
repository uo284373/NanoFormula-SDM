<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ComparativaPilotos"
    tools:showIn="@layout/activity_comparativa_pilotos"
    android:background="@drawable/fondo_degradado"
    android:layout_marginTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txSeleccionarPilotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/linea"
            android:drawableRight="@drawable/linea"
            android:gravity="center"
            android:text="@string/comparativaPilotos"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="40dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ftComparativaPiloto1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/fotoPiloto"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/roundedImageView"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/txNombrePiloto1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seleccionarPiloto1"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/vspilotos"
                android:layout_marginRight="40dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ftComparativaPiloto2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/fotoPiloto"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/roundedImageView"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/txNombrePiloto2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seleccionarPiloto2"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txEstadisticasPiloto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/linea"
            android:drawableRight="@drawable/linea"
            android:gravity="center"
            android:text="@string/estadisticasPiloto1"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="20dp"
                >

                <TextView
                    android:id="@+id/txTituloTitulosPiloto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titulosEscudería"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/txTitulosPiloto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txTituloTemporadasPiloto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/temaporadasPiloto"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/txTemporadasPiloto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txTituloVictoriasPiloto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/victoriasEscudería"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txVictoriasPiloto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/txTituloVueltaRapidaPiloto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vueltaRapida"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txVueltaRapidaPiloto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="30dp"
                >

                <TextView
                    android:id="@+id/txTituloPodiosPiloto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/podiosPiloto"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txPodiosPiloto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txTituloPuntosPiloto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/puntosPilotototal"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txPuntosPilotoTotal1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txTituloPoles1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/polesPiloto"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txPolesPiloto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txTituloNumEquipos1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/numeroEquipos"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txMejorNumEquipos1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>








        <TextView
            android:id="@+id/txEstadisticasPiloto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/linea"
            android:drawableRight="@drawable/linea"
            android:gravity="center"
            android:text="@string/estadisticasPiloto2"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="20dp"
                >

                <TextView
                    android:id="@+id/txTituloTitulosPiloto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titulosEscudería"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/txTitulosPiloto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txTituloTemporadasPiloto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/temaporadasPiloto"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/txTemporadasPiloto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txTituloVictoriasPiloto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/victoriasEscudería"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txVictoriasPiloto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/txTituloVueltaRapidaPiloto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vueltaRapida"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txVueltaRapidaPiloto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="30dp"
                >

                <TextView
                    android:id="@+id/txTituloPodiosPiloto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/podiosPiloto"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txPodiosPiloto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txTituloPuntosPiloto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/puntosPilotototal"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txPuntosPilotoTotal2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txTituloPoles2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/polesPiloto"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txPolesPiloto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txTituloNumEquipos2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/numeroEquipos"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txMejorNumEquipos2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>