<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.NanoFormula" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.NanoFormula" parent="Base.Theme.NanoFormula">
        <item name="colorPrimary">@color/backgroundColorMenu</item>
    </style>

    <style name="bottomMenu">
        <item name="android:background">@color/backgroundColorMenu</item>
    </style>

    <style name="Theme.NanoFormulaDetails" parent="Base.Theme.NanoFormula">
        <item name="colorPrimary">@color/colorUno</item>
    </style>

    <style name="Theme.NanoFormula.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NanoFormula.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NanoFormula.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>